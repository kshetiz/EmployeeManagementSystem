@model IEnumerable<EmployeeViewModel>

@{

    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
<div>
    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add Employee</a>


</div>
<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="customerDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    
                    <th>EmployeeId</th>
                    <th>Salary</th>
                    <th>Start date</th>
                    <th>End date</th>
                    <th>Employee Code</th>
                    <th>Is Disabled</th>
                    <th>Person Id</th>
                    <th>Position Id</th>
                    <th>Email</th>
                </tr>

            </thead>
        </table>
    </div>
</div>

@section Scripts{
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
           $(document).ready(function () {
           $("#customerDatatable").DataTable({
               "processing": true,
               "serverSide": true,
               "filter": true,
               "ajax": {
                   "url": "/employee/getall",
                   "type": "POST",
                   "datatype": "json"
                        },
                   "columnDefs": [{
                    "targets": [0],
                    "visible": true,
                   "searchable": false
           }],
           "columns": [
               { "data": "employeeId", "name": "EmployeeId", "autoWidth": true },
               { "data": "Salary", "name": "Salary", "autoWidth": true },
               { "data": "startDate", "name": "StratDate", "autoWidth": true },
               { "data": "endDate", "name": "EndDate", "autoWidth": true },
               { "data": "employeeCode", "name": "EmployeeCode", "autoWidth": true },
               { "data": "isDisabled", "name": "IsDisabled", "autoWidth": true },
               { "data": "personId", "name": "PersonId", "autoWidth": true },
               { "data": "positionId", "name": "PositionId", "autoWidth": true },
               { "data": "Email", "name": "Email", "autoWidth": true },

               {
                "render": function () 
                { return "<a href='#' class='btn btn-primary'>Edit</a><a href='Delete/' class='btn btn-danger'>Delete</a><a href='#' class='btn btn-primary'>EmployeeJobHistory</a>";   }
            },
               

           ]
       });
       });

      
</script>

}
